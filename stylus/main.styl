@require "partials/_global.styl"
@require "partials/_fonts.styl"
@require "partials/_helpers.styl"
@require "partials/_galleries.styl"
@require "partials/_overrides.styl"
@require "partials/_hamburger.styl"

/* ==========================================================================
	Main Styles
   ========================================================================== */

html
body
#page
#main
#primary
	min-height 100%


html
	width 100%
	text-shadow 0 0 1px transparent
	margin 0
	font 16px $ff_body


body
	@extends html

	&.admin-bar
		#wpadminbar
			position fixed
			top 0


a
	outline 0 !important
	color $purple
	transition all 0.25s

	&:link
	&:visited
		text-decoration none

	&:hover
	&:active
	&:focus
		text-decoration underline


input
textarea
	background-color $off-white
	border none
	box-sizing border-box
	padding 0.5em
	font-family inherit
	-webkit-appearance none
	-webkit-border-radius 0


input
	&[type="radio"]
		-webkit-appearance radio

	&[type="checkbox"]
		-webkit-appearance checkbox


input[type="submit"]
	cursor pointer
	font-family inherit
	transition all 0.25s

	&:hover
		background-color $gray


.invisible
	visibility hidden
	position absolute


.hamburger
	position absolute
	right 3%
	top 50%
	-webkit-transform translateY( -50% )
	transform translateY( -50% )


#masthead
	width 100%
	height $mast-ht
	background black
	color white
	position fixed
	top 0
	z-index 999


#logo
	height 67%
	position relative
	top 0.78rem
	display block
	-webkit-transition all 0.5s ease
	transition all 0.5s ease


#site-title
	text-align center
	margin 0


#site-navigation-container
	display none

	#site-navigation
		width 100%
		list-style none
		text-align justify
		padding-left 0
		margin 0
		flexbox()

		li
			flexitem()
			margin 0 1em

			&.menu-item-534
				a
					&:link
					&:visited
						color $yellow

			a
				text-decoration none

				&:link
				&:visited
					color inherit

				&:hover
				&:active
				&:focus
					color $yellow


.sb-right
	&.sb-active
		z-index 999

	.sb-logo
		width 50%
		height auto
		margin 1em 0
		position relative
		display block
		left 5%

	#site-navigation-sb
		margin-top 1em
		text-align left
		list-style none
		padding-left 0
		position relative
		left 9%

		a
			font-size 1.3em
			color white
			line-height 2

		.menu-item-534
			a
				&:link
				&:visited
					color $yellow


#page
	background url(../img/footer.jpg) no-repeat bottom right
	background-size contain


#main
	position relative
	box-sizing border-box
	padding-top $mast-ht


#primary
	width 100%
	box-sizing border-box

	section
		.section-content
			&.no-pad
				padding-top 0 !important


	section
		position relative
		padding 3em 0

		&.shield-buttons-content
			width 90%
			margin 0 auto

		&.full-image
			width auto
			height 100vh
			background-size auto 100%
			background-position center bottom
			background-repeat no-repeat
			padding 0
			overflow hidden

		.shield-buttons
			list-style none
			padding-left 0

			.shield-item
				width 15em
				display block
				margin 0 auto
				vertical-align top

				img
					max-width 250px
					margin 0 auto
					display block

				.shield-caption-list
					text-align left

				h4
					text-transform uppercase
					font-size 1.8em
					margin-bottom 0.5em
					text-align center

				img
					max-width 100%
					height auto
					margin 0

				.shield-caption
					position relative
					bottom 1em
					margin 0.35em auto
					text-align center


#colophon
	width 100%
	color white

	.site-info
		margin 0 auto 0 5%
		padding 3em 0
		text-align left
		line-height 1.3
		font-size 0.9em
		color black
		position relative

		.mff-logo
			width auto
			float left
			margin-right 2em
			z-index 999

		a
			color inherit

		p
			position relative
			bottom 0.1em
			display inline-block

	#rhd-logo-footer
		width 1.35em
		height 1.35em
		margin 0 0.05em
		position relative
		bottom -0.15em


/* ==========================================================================
	Posts & Pages
   ========================================================================== */

.entry-title
.page-title
.archive-title
	font-size 2em
	text-align center

	a
		color inherit


.entry-title
	margin 1em auto


.page-title
	margin 1em auto


.archive-title
	margin-top 0


.entry-tags
.entry-categories
	margin 0
	font-size 0.9em


.section-content
.page-inner
	wrapper()
	display block

	p
		margin 1em auto

	h3
		font-size 1.6em


.entry-content
	line-height 1.5

	p
		margin-top 1em
		margin-bottom 1em

		&:first-child
			margin-top 0

		&:last-child
			margin-bottom 0

	ul
	ol
		padding-left 2em

	img
		max-width 100%

		.alignleft
			margin-left 0

		.alignright
			margin-right 0

	iframe[src*='youtube']
		max-width 100%
		display block
		margin 2em auto

	hr
		wrapper(1em, 1em, 75%)
		height 2px
		background $gray
		border none

.page
	#primary
		section
			&:first-of-type
					.section-content
						padding-top $mast-ht


.blog-area
	#blog-header
		width 100%
		height $blog-meta-ht-mobile
		padding 1em 0
		position absolute
		top $mast-ht
		z-index 500

		#blog-meta-content
			wrapper()
			list-style none
			padding-left 0

			li
				width 100%
				margin-bottom 0.5em
				display block

				&:last-child
					margin-bottom 0

				.drop
				.search-submit
					height 2em
					text-transform uppercase
					-transition(all 0.2s)
					display inline-block
					position absolute
					background-color $gray
					top 0
					right 0
					font-weight 400
					font-size 1em
					line-height 1

					&:hover
					&:active
						background-color white

				.drop
					width 2em

				.rhd-dropdown-title
				.search-field
					width 100%
					height 2rem
					padding-left 0.5em
					background white
					color $gray
					position relative
					font-family $ff_body
					font-size 1em
					color $gray
					placeholder-props( $ff_body, $gray, 1 )
					-border-radius(0.1em)

				.rhd-dropdown-title
					.dd-title-text
					.dd-link-text
						position relative
						top 0.4em

				.drop
					text-decoration none
					text-align center

					.dd-link-text
						color black
						font-weight normal

				.rhd-dropdown
					position relative
					text-transform uppercase

					ul
						width 100%
						position absolute
						top 2em
						overflow-y auto
						background white
						padding-left 0
						margin 0
						display none
						z-index 999
						box-shadow 0 3px 4px -1px rgba(0,0,0,0.5)

						li
							width 100%
							background white
							display block
							padding-left 0.5em

							a
								color $gray
								text-decoration none
								-transition(all 0.25s)

								&:hover
								&:active
									color $orange

	#main
		.post
			clearfix()

			.entry-header
				text-align center
				margin-bottom 1em

				img
					border 2px solid black

				.entry-title
					margin 0 0 0.25rem 0

				.entry-details
					margin 0

					.sep
						font-size 0.8em

			.entry-content
				img
					height auto

					&.alignleft
						margin 0 1em 0 0
					&.alignright
						margin-right 0 0 0 1em
					&.aligncenter
						margin 0 auto
						display block


.blog
.search
	#main
		wrapper()
		padding-top $blog-meta-ht-mobile + $mast-ht

		.post
			margin 2em auto

			.attachment-grid-featured
				width 100%
				height auto
				max-height 14em


.single
	#main
		padding-top $mast-ht


.search
	#main
		.post
		.page
			width 100%
			margin-bottom 1em
			padding-bottom 1em
			border-bottom 2px solid black

		.entry-title
		.entry-details
			text-align left

		.entry-title
			margin 0 0 0.25rem


.single
	.entry-header
		height 50vh
		background-position center center
		background-size cover
		background-repeat no-repeat
		position relative

		.entry-header-content
			width 100%
			background-color rgba(255,255,255,0.65)
			position absolute
			bottom 0
			padding 0.5em 0

			.entry-details
			.entry-title
				display block

			.entry-title
				a
					color inherit

	.entry-content
		clearfix()

	.entry-content
	.entry-meta
	#comments
		wrapper 2em 2em

	.entry-author
		border-top 2px solid black
		margin-top 1em
		padding 2em 0 0 0

		.entry-author-content
			margin 0 1em
			padding-left 1em
			border-left 2px solid $gray

			.name
				font-size 1.2em
				font-weight normal

			.bio
				font-style italic


.error404
	#primary
		section
			padding 1em 0


#comments
	margin 2em auto

	.commentlist
		list-style none
		padding-left 0

		ul
		ol
			@extends #comments .commentlist

		.children
			padding 0 1.5em

	.even
		background $off-white

	.odd
		background white

	.comment-body
		padding 1em
		box-sizing border-box

	textarea
		max-width 100%

	#commentform
		width 100%

		p
			margin-bottom 0.75rem

		input
		textarea
			width 100%
			padding 0.5em
			display block

		textarea
			margin-top 1.7rem

		#submit
			width auto
			margin-top 1.6rem

			&:hover
				background-color $gray


.pagination
	margin 1em auto
	font-size 1.2em
	clearfix()

	.pag-next
		float left

	.pag-prev
		float right


#contact
	margin 2em 0 4em 0

	.rhd-social
		list-style none
		padding-left 0
		text-align center
		margin 2em auto

		.social
			width 3em
			display inline-block
			margin 0 0.5em

			img
				width 100%
				margin 0

	.board-of-directors
		width 65%
		margin 0 auto


/* ==========================================================================
	"Text Buttons"
   ========================================================================== */


.text-button
	text-align center
	margin 2em auto

	a
		padding 0.4em .8em
		text-decoration none
		color inherit
		border 4px solid black

		&:hover
			background-color black
			color white


.default
	.text-button
		a
			background-color white

			&:hover
				color white
				background-color black


.green
.orange
.purple
.teal
	.text-button
		a
			border-color white

			&:hover
				background-color white


.green
	.text-button
		a
			&:hover
				color $green


.orange
	.text-button
		a
			&:hover
				color $orange


.purple
	.text-button
		a
			&:hover
				color $purple

.teal
	.text-button
		a
			&:hover
				color $teal

.yellow
	.text-button
		a
			&:hover
				color $yellow



/* ==========================================================================
	Widget Areas & Sidebars
   ========================================================================== */

#footer-widget-area
	wrapper 3em 3em

	.widget_rhd_mailchimp_widget
		text-align center

		.rhd_mc_subscribe
			width 100%

			input
				display block
				padding 0.4em .8em
				transition all 0.25s

				&[type="text"]
				&[type="email"]
					width 100%
					text-decoration none
					color inherit
					border 4px solid black

					&:focus
						background $off-white

				&[type="submit"]
					font-family $ff_body
					background white
					margin 0 auto
					@extends .text-button a

					&:hover
						background black
						color white

		.rhd_mc_thanks
		.rhd_mc_error
			font-size 1.2em


/* ==========================================================================
	Front Page / Splash
   ========================================================================== */

.front-page
	#top-home
		height auto
		background url(../img/home-skyline.jpg) no-repeat bottom right
		background-size 50%
		color black
		padding 0

		.section-content
		.page-inner
			.entry-content
				width 95%
				margin 0 auto
				padding-bottom 3em

		.top-logo
			width 14em
			height auto
			margin 2em auto
			display block


	#problem-solution-home
		h3
			margin 0

		.entry-content
			margin-top 0


	#slideshow-home
		width 100%
		padding 0

		.section-content
			width 85%
			margin 0 auto

		.entry-content
			width 100%
			max-width none
			max-height 1048px
			padding-bottom 0


	#shield-buttons-home
		.entry-content
			width 100%


	#current-projects-home
		.projects-links
			width 100%
			margin 2em auto
			clearfix()

			h3
				margin-bottom 1em

			.project
				width 95%
				margin 1em auto

				.howyouhelp
					text-align center
					font-weight bold
					margin-top 0.25rem

				ul
					width 90%
					margin 0 auto

				img
					width 100%
					height auto
					margin 0
					border-radius 0.2em

	.entry-content
		#our-programs-content
		#our-partners-content
			padding-left 0
			list-style none
			text-align center

		#our-partners-content
			a
				color $orange

			li
				margin 1em 0


/* ==========================================================================
	Become A Hero
   ========================================================================== */


#become-a-superhero
	#hero-habit-of-giving
		@extends .green


	#hero-out-of-your-way
		@extends .orange


	#hero-unlock-your-superpower
		@extends .purple


	#hero-bonus-buttons
		.shield-buttons
			.shield-item
				h4
					font-size 1.3em

				p
					margin-top 2rem


/* ==========================================================================
	Who We Are
   ========================================================================== */

#who-we-are
	section
		&:first-child
			padding-top 0

			.section-content
				padding-top (@padding-top) !important

				iframe
					margin 1em auto

	#who-simple-slider
		width 100%
		padding 0

		.section-content
			width 85%
			margin 0 auto

		.rslides_container
			width 100%
			height auto
			float none
			margin 0

			img
				margin 0


	#who-founders
		.founder
			margin 3em auto
			clearfix()

			img
				margin 0 auto 0.75em auto
				float none
				display block
				border-radius 2px

			h3
				font-size 1.1em
				text-align center


	#donor-list
		h3
			font-size 1.3em

		.donor-lists-container
			width 50%
			margin 1em auto 0 auto

			ul
				list-style none
				padding-left 0
				text-align center
				margin-bottom 1em


/* ==========================================================================
	How It Works
   ========================================================================== */

#how-it-works-steps
	padding-top 0 !important

	.section-content-flowchart
		padding-top 0 !important

	.step
		width 100%

		.step-image
			width auto
			max-width 100%
			height auto
			display block
			margin 0 auto
			position relative

		.step-caption
			text-align center
			position relative

			.step-title
				font-size 1.2em
				font-weight strong

			p
				margin 0


/* ==========================================================================
	Events
   ========================================================================== */

#tribe-events-pg-template
	margin-top 12.5rem


.volunteer-link
	width 60%
	text-align center
	margin 0 auto

	.text-button
		margin-top 1em

	p
		margin 0.25em


.eventbrite-ticket-embed
	& > iframe
		min-height 19.1em !important


/* ==========================================================================
	Donate Page + Bloomerang Form
   ========================================================================== */

.std-text-page
	margin-top 2em

	input
	textarea
		background white
		border 1px solid #ccc
		border-radius 0.2em

	input
		&[type="submit"]
			border-radius 0



#post-111
	margin 2em auto

#post-486
	.recurring
		display none


#donation-form
#email-registration-form
	width 100%
	margin 2em auto
	text-align center

	h3
		font-size 1.4em

	textarea
		max-width 100%

	input
	select
		font-size 1em
		@extends #donation-form textarea


	.section
		margin 1em auto

		.section-inst
			margin 0 auto 0.5em auto
			font-style italic

		&.donation
			.field
				text-align left

		&.custom-fields
			margin 0.5em auto

		.checkboxes
			margin 0 auto


	.btn-submit
		padding 0.4em .8em
		text-decoration none
		color inherit
		border 4px solid black
		font 1em $ff_body
		cursor pointer

		&:hover
		&:active
			background black
			color white


.comodo
	position relative
	margin 0 auto 1em auto
	display block


/* ==========================================================================
	Extras
   ========================================================================== */

.program-links
	list-style none !important
	padding-left 0 !important

	li
		img
			border-width 3px
			border-style solid
			border-radius 0.3em
			transition 0.25s background-color

.green
	.program-links
		li
			img
				background-color rgba(255,255,255,0.5)
				border-color black

				&:hover
					background-color white


/* ==========================================================================
	Media Queries
   ========================================================================== */

@media screen and (min-width 40em)
	#logo
		height 80%
		top 0.45rem
		margin 0 auto

	.blog-area
		#blog-header
			height $mast-ht
			padding 0

			#blog-meta-content
				wrapper()
				flexbox()
				top 0.85em

				li
					width 30%
					flexitem()
					margin-bottom 0

					#blog-search
						position relative
						top 0.35rem

	.blog
	.search
		#main
			wrapper()
			padding-top ($mast-ht*2)

	#comments
		#commentform
			width 75%

			p
				margin-bottom 0.75rem

			input
			textarea
				background-color $off-white
				font-size 0.8em
				border none
				box-sizing border-box
				padding 0.5em
				display block

			input
				&[type="text"]
				&[type="email"]
					width 75%

			textarea
				margin-top 1.7rem

			#submit
				width auto

	#donation-form
	#email-registration-form
		width 50%
		margin 0 auto

	#who-we-are
		#who-founders
			.founder
				img
					margin 0 1em 0 0
					float left

				h3
					text-align left

		#donor-list
			.donor-lists-container
				width 100%
				margin 2em auto
				columns(2)

				ul
					text-align left

	#how-it-works-steps
		width 100%

		.section-content-flowchart
			max-width 60em
			clearfix()

		.step
			width 48%
			min-height 19em
			position relative

			&:nth-of-type(odd)
				float left

			&:nth-of-type(even)
				float right

			&:nth-of-type(4)
				.step-caption
					bottom 1.8em

			.step-image
			.step-caption
				margin 0 auto
				display block

			.step-image
				width 100%
				height auto

			.step-caption
				text-align center
				position relative

		#grants
			width 100%
			clear both

	.blog
		#primary
			#content
				padding-top 2em
				flexbox()

			.post
				width 47%
				flexitem()
				vertical-align top
				transition all 0.25s
				margin 0 0 0 0.75em

				.entry-details
					padding-top 0.5em

				.entry-details-sep
					wrapper(0.5em, 0.5em, 20%)
					height 2px
					border none
					background black


	#footer-widget-area
		.widget_rhd_mailchimp_widget
			.rhd_mc_subscribe
				margin 1em auto

				input
					&[type="text"]
					&[type="email"]
						width 30.9%
						margin-left 1%
						display inline-block
						font 1em $ff_body

						&:first-child
							margin-left 0

					&[type="submit"]
						display block
						margin-top 0.75em

	#tribe-events-pg-template
		margin-top 6.5rem

	.program-links
		flexbox()

		li
			width 30%
			flexitem()

			img
				width 100%
				height auto


@media screen and (min-width 50em)
	#who-we-are
		#donor-list
			.donor-lists-container
				columns(3)


@media screen and (min-width 52.5em)
	.shield-buttons
		flexbox()

		.shield-item
			display inline-block !important

	.front-page
		#current-projects-home
			.projects-links
				.project
					width 44%
					max-width 500px
					display inline-block
					vertical-align top

					&:first-child
						float left
					&:last-child
						float right

		#our-programs-content
		#our-partners-content
			flexbox()

			li
				flexitem()
				vertical-align top

		#our-programs-content
			li
				width 30%
				padding 0 2%

				img
					wrapper(0, 0, 90%)
					height auto

		#our-partners-content
			li
				width 48%
				margin-bottom 0


@media screen and (min-width 60em)
	#who-we-are
		#donor-list
			.donor-lists-container
				columns(4)


@media screen and (min-width 77em)
	#logo
		float left
		margin-left 2%

	.hamburger
		display none

	#site-navigation-container
		width 70%
		margin-right 2%
		font-size 0.9em
		float right
		position relative
		top 1.8em
		display block